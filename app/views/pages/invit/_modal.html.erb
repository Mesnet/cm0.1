<div id='MyInvitations' class='modal fade' role='dialog' aria-hidden="true">
  <div class="modal-dialog" style="width:500px;">
    <div class='content'>
      <div id="MeuCarousel4" class="carousel slide">
        <div class="modal-header" style="padding-bottom: 0;">
          <h4>Invitations</h4>
          <ul  class="nav nav-tabs nav-justified">
            <li data-target="#MeuCarousel4" class="active" data-slide-to="0">
              <a data-toggle="tab">
                <i class="fa fa-users" id="fa_icons"></i>
                Groupes
                <%- if current_user.cached_group_invitations.any? %>
                (<%=current_user.cached_group_invitations.count%>)
                <% end %>
              </a>
            </li>
            <li data-target="#MeuCarousel4" data-slide-to="1">
              <a data-toggle="tab">
                <i class="fa fa-calendar" id="fa_icons"></i>
                Ev√®nements
                <%- if current_user.cached_event_invitations.any? %>
                (<%=current_user.cached_event_invitations.count%>)
                <% end %>
              </a>
            </li>
            <li data-target="#MeuCarousel4" data-slide-to="2">
              <a data-toggle="tab">
                <i class="fa fa-building-o" id="fa_icons"></i>
                Company
                <%- if current_user.cached_company_invitations.any? %>
                (<%=current_user.cached_company_invitations.count%>)
                <% end %>
              </a>
            </li>
          </ul>
          <div class="carousel-inner">
            <div class="item active">
              <%- if current_user.cached_group_invitations.any? %>
                <div class="my_area" id="my_invitations_group_area">
                  <% current_user.cached_group_invitations.each do |group| %>
                    <%= render 'pages/invit/group', group: group %>
                  <% end%>
                </div>
              <% else %>
                <h5 class='message_alert'><i class='fa fa-exclamation-triangle'></i>&emsp;Aucunes invitations en attente</h5>
              <% end %>
            </div>
            <div class="item">
              <%- if current_user.cached_event_invitations.any? %>
                <div class="my_area" id="my_invitations_event_area">
                  <% current_user.cached_event_invitations.each do |event| %>
                    <%= render 'pages/invit/event', event: event %>
                  <% end%>
                </div>
              <% else %>
                <h5 class='message_alert'><i class='fa fa-exclamation-triangle'></i>&emsp;Aucunes invitations en attente</h5>
              <% end %>
            </div>
            <div class="item">
              <%- if current_user.cached_company_invitations.any? %>
                <div class="my_area" id="my_invitations_event_area">
                  <% current_user.cached_company_invitations.each do |company| %>
                    <%= render 'pages/invit/company', company: company %>
                  <% end%>
                </div>
              <% else %>
                <h5 class='message_alert'><i class='fa fa-exclamation-triangle'></i>&emsp;Aucunes invitations en attente</h5>
              <% end %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <a data-dismiss="modal" class="btn btn-danger pull-left">Annuler</a>
        </div>
      </div>
    </div>
  </div>
</div>