<div id="user_info_format">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-login">
          <div class="panel-heading">
            <div class="col-xs-4">
              <div class="register_steps_active">
                <i class="fa fa-user" id="register_step_icon_active"></i>
              </div>
            </div>
            <div class="col-xs-4">
              <%- if current_user.name.present? %>
                <a href="/info_step/?step=2" data-method="patch" data-remote="true" class="register_steps" style="padding-left: 4px;">
                  <i class="fa fa-building" id="register_step_icon"></i>
                </a>
              <% else %>
                <div class="register_steps" style="padding-left: 4px;">
                  <i class="fa fa-building" id="register_step_icon"></i>
                </div>
              <% end %>
            </div>
            <div class="col-xs-4">
              <%- if current_user.company? && current_user.cached_admin_company.size != 0 %>
                <a href="/info_step/?step=3" data-method="patch" data-remote="true" class="register_steps" style="padding-right: 6px;">
                  <i class="fa fa-paper-plane" id="register_step_icon"></i>
                </a>
              <% else %>
                <div class="register_steps" style="padding-right: 6px;">
                  <i class="fa fa-paper-plane" id="register_step_icon"></i>
                </div>
              <% end %>
            </div>
            <hr>
          </div>
          <%- if current_user.name.present? %>
            <% @name = current_user.name%>
            <% @surname = current_user.surname%>
            <% @pseudo = current_user.pseudo%>
          <% else %>
            <% @name = nil%>
            <% @surname = nil%>
            <% @pseudo = nil%>
          <% end %>
          <div class="panel-body">
            <h5> Vos informations :</h5>
            <%= simple_form_for(UserInfo.new, validate: true, remote: true)  do |f| %>
              <div class="form-group">
                <%= f.text_field :name, placeholder: "Prenom*", class: "form-control", :value => @name %>
              </div>
              <div class="form-group">
                <%= f.text_field :surname, placeholder: "Nom*", class: "form-control", :value => @surname %>
              </div>
              <div class="form-group">
                <%= f.text_field :pseudo, placeholder: "Pseudo", class: "form-control", :value => @pseudo %>
              </div>
              <%= f.button :submit, "Suivant", class: "btn btn-success pull-right" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>