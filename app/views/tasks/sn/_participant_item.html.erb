<div class="participant_box" id="<%=@task.id%>participant_box<%=user.id%>">
  <div class="participant_pseudo">
    <%= user.pseudo %>
  </div>
  <%- if user.id == current_user.id  %>
    <a class="participant_btn" href="/tasks/<%=@task.id%>/unparticipate" data-method="patch" data-remote="true">
      <i class="fa fa-close"></i>
    </a>
  <% else %>
    <%- if @task.user_id == current_user.id %>
      <a class="participant_btn" href="/tasks/<%=@task.id%>/delparticipate?userid=<%=user.id%>" data-method="patch" data-remote="true">
        <i class="fa fa-close"></i>
      </a>
    <% end %>
  <% end %>
</div>